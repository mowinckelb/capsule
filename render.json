{
  "version": 2,
  "builds": [
    {"src": "web.py", "use": "@render/python"},
    {"src": "frontend/*.html", "use": "@render/static"}
  ],
  "env": {
    "PYTHONPATH": "./"
  },
  "services": [
    {
      "type": "web",
      "env": "python",
      "buildCommand": "pip install -r requirements.txt",
      "startCommand": "uvicorn web:app --host 0.0.0.0 --port $PORT"
    }
  ]
}